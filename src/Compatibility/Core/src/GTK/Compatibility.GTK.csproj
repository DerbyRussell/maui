<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Use TargetFrameworks (plural) instead of TargetFramework (singular) here even though there is only one target
      framework. This is to work around an issue with the Microsoft.Web.WebView2 package:
      https://github.com/MicrosoftEdge/WebView2Feedback/issues/710 -->
    <TargetFramework>$(_MauiDotNetTfm)-windows10.0.19041.0</TargetFramework>
    <Description>Build GTK applications.</Description>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<Platforms>AnyCPU;x86</Platforms>
	<UseWindowsForms>true</UseWindowsForms>
	<RuntimeIdentifiers>win10-x86</RuntimeIdentifiers>
    <AssemblyName>Microsoft.Maui.Controls.Compatibility.GTK</AssemblyName>
    <RootNamespace>Microsoft.Maui.Controls.Compatibility.GTK</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>WINDOWS</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>WINDOWS</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x86'">
    <DefineConstants>WINDOWS</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x86'">
    <DefineConstants>WINDOWS</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="ExportCellAttribute.cs" />
    <Compile Remove="ExportImageSourceHandlerAttribute.cs" />
    <Compile Remove="ExportRendererAttribute.cs" />
    <Compile Remove="Forms.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OpenTK" Version="4.7.4" />
    <PackageReference Include="OpenTK.Compute" Version="4.7.4" />
    <PackageReference Include="OpenTK.Core" Version="4.7.4" />
    <PackageReference Include="OpenTK.Graphics" Version="4.7.4" />
    <PackageReference Include="OpenTK.Input" Version="4.7.4" />
    <PackageReference Include="OpenTK.Mathematics" Version="4.7.4" />
    <PackageReference Include="OpenTK.OpenAL" Version="4.7.4" />
    <PackageReference Include="OpenTK.redist.glfw" Version="3.3.7.27" />
    <PackageReference Include="OpenTK.Windowing.Common" Version="4.7.4" />
    <PackageReference Include="OpenTK.Windowing.Desktop" Version="4.7.4" />
    <PackageReference Include="OpenTK.Windowing.GraphicsLibraryFramework" Version="4.7.4" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\..\Graphics\src\Graphics\Graphics-GTK.csproj" />
  </ItemGroup>

  <ItemGroup>
